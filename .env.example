# =================================================================
# MyJournal IA - Configuration Environment Variables
# =================================================================
# Copiez ce fichier vers .env et configurez selon vos besoins

# =================================================================
# Django Configuration
# =================================================================
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =================================================================
# Database (SQLite par défaut, PostgreSQL pour production)
# =================================================================
DATABASE_URL=sqlite:///db.sqlite3
# Pour PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/myjournal_db

# =================================================================
# Intelligence Artificielle - APIs (OPTIONNEL)
# =================================================================

# Google Vision AI (pour analyse d'images avancée)
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json

# OpenAI (pour GPT-4 et analyse de texte)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini (alternative à GPT-4)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Hugging Face (pour CLIP et modèles locaux)
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here

# Perplexity AI (pour enrichissement des recommandations)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# =================================================================
# AI Services Configuration
# =================================================================

# Service de Vision AI à utiliser
# Options: 'clip' (local, gratuit), 'google_vision', 'gpt4_vision'
AI_VISION_SERVICE=clip

# Service d'analyse de texte
# Options: 'local' (gratuit), 'gpt4', 'gemini'
AI_TEXT_SERVICE=local

# Analyse automatique lors de l'upload
AUTO_ANALYZE_ON_UPLOAD=True

# Seuil de confiance pour les détections
VISION_CONFIDENCE_THRESHOLD=0.7

# Nombre maximum de tags par média
MAX_TAGS_PER_MEDIA=10

# =================================================================
# Rappels Intelligents
# =================================================================
ENABLE_SMART_REMINDERS=True
DEFAULT_REMINDER_TIME=21:00

# =================================================================
# Email Configuration (pour les notifications)
# =================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# =================================================================
# Security (pour production)
# =================================================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
